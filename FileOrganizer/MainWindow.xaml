<Window x:Class="FileOrganizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="544.737">
    <Grid>
        <Label x:Name="TargetDirectoryLabel" Content="Target Directory" HorizontalAlignment="Left" Height="25" Margin="22,59,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="OpenTargetDirectory" Content="Open" HorizontalAlignment="Left" Height="25" Margin="427,59,0,0" VerticalAlignment="Top" Width="80" Click="OpenTargetDirectory_Click"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="25" Margin="125,59,0,0" VerticalAlignment="Top" Width="297">
            <TextBlock x:Name="DirectoryPath" Margin="5,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"/>
        </Border>
        <Button x:Name="SortButton" Content="Sort" HorizontalAlignment="Left" Height="36" Margin="22,137,0,0" VerticalAlignment="Top" Width="128" Click="SortButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
